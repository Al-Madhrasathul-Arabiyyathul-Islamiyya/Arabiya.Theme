<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <StackPanel>
      <StackPanel>
        <TextBlock
          Margin="0,0,0,15"
          Classes="h3"
          Text="Headings and Text Styles" />

        <Border
          Padding="20"
          Background="{StaticResource SurfaceBrush}"
          BorderBrush="{StaticResource DividerBrush}"
          BorderThickness="1"
          CornerRadius="8">
          <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
            <!--  Headers  -->
            <TextBlock
              Grid.Row="0"
              Grid.Column="0"
              Margin="0,0,0,10"
              FontWeight="Bold"
              Text="Style" />
            <TextBlock
              Grid.Row="0"
              Grid.Column="1"
              Margin="0,0,20,10"
              FontWeight="Bold"
              Text="Size" />
            <TextBlock
              Grid.Row="0"
              Grid.Column="2"
              Margin="0,0,0,10"
              FontWeight="Bold"
              Text="Weight" />

            <!--  H1  -->
            <TextBlock
              Grid.Row="1"
              Grid.Column="0"
              Classes="h1"
              Text="Heading 1" />
            <TextBlock
              Grid.Row="1"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="32px" />
            <TextBlock
              Grid.Row="1"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="Bold (700)" />

            <!--  H2  -->
            <TextBlock
              Grid.Row="2"
              Grid.Column="0"
              Classes="h2"
              Text="Heading 2" />
            <TextBlock
              Grid.Row="2"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="28px" />
            <TextBlock
              Grid.Row="2"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="Bold (700)" />

            <!--  H3  -->
            <TextBlock
              Grid.Row="3"
              Grid.Column="0"
              Classes="h3"
              Text="Heading 3" />
            <TextBlock
              Grid.Row="3"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="24px" />
            <TextBlock
              Grid.Row="3"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="Bold (700)" />

            <!--  H4  -->
            <TextBlock
              Grid.Row="4"
              Grid.Column="0"
              Classes="h4"
              Text="Heading 4" />
            <TextBlock
              Grid.Row="4"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="20px" />
            <TextBlock
              Grid.Row="4"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="SemiBold (600)" />

            <!--  H5  -->
            <TextBlock
              Grid.Row="5"
              Grid.Column="0"
              Classes="h5"
              Text="Heading 5" />
            <TextBlock
              Grid.Row="5"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="18px" />
            <TextBlock
              Grid.Row="5"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="Medium (500)" />

            <!--  H6  -->
            <TextBlock
              Grid.Row="6"
              Grid.Column="0"
              Classes="h6"
              Text="Heading 6" />
            <TextBlock
              Grid.Row="6"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="16px" />
            <TextBlock
              Grid.Row="6"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="Medium (500)" />

            <!--  Body  -->
            <TextBlock
              Grid.Row="7"
              Grid.Column="0"
              Classes="body"
              Text="Body text"
              TextWrapping="Wrap" />
            <TextBlock
              Grid.Row="7"
              Grid.Column="1"
              Margin="0,0,20,0"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="14px" />
            <TextBlock
              Grid.Row="7"
              Grid.Column="2"
              VerticalAlignment="Center"
              FontFamily="Consolas"
              Text="Regular (400)" />
          </Grid>
        </Border>
      </StackPanel>

      <!--  Text Variants Showcase  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,15"
          Classes="h3"
          Text="Text Style Variants" />

        <Grid
          Margin="0,0,0,15"
          ColumnDefinitions="*,*"
          RowDefinitions="Auto,Auto,Auto">
          <!--  Regular  -->
          <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,10"
            Padding="15"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
              <TextBlock FontWeight="SemiBold" Text="Regular Text" />
              <TextBlock Text="Standard body text with regular weight" />
              <TextBlock
                Margin="0,10,0,0"
                FontFamily="Consolas"
                FontSize="12"
                Text="Font weight: 400" />
            </StackPanel>
          </Border>

          <!--  Bold  -->
          <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,10"
            Padding="15"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
              <TextBlock FontWeight="SemiBold" Text="Bold Text" />
              <TextBlock FontWeight="Bold" Text="Body text with bold weight for emphasis" />
              <TextBlock
                Margin="0,10,0,0"
                FontFamily="Consolas"
                FontSize="12"
                Text="Font weight: 700" />
            </StackPanel>
          </Border>

          <!--  Italic  -->
          <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,10"
            Padding="15"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
              <TextBlock FontWeight="SemiBold" Text="Italic Text" />
              <TextBlock Classes="italic" Text="Text with italic styling for subtle emphasis" />
              <TextBlock
                Margin="0,10,0,0"
                FontFamily="Consolas"
                FontSize="12"
                Text="Font style: Italic" />
            </StackPanel>
          </Border>

          <!--  Bold Italic  -->
          <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,10"
            Padding="15"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
              <TextBlock FontWeight="SemiBold" Text="Bold Italic Text" />
              <TextBlock Classes="bolditalic" Text="Text with bold italic styling for strong emphasis" />
              <TextBlock
                Margin="0,10,0,0"
                FontFamily="Consolas"
                FontSize="12"
                Text="Font weight: 700, Style: Italic" />
            </StackPanel>
          </Border>

          <!--  Caption  -->
          <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,0"
            Padding="15"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
              <TextBlock FontWeight="SemiBold" Text="Caption Text" />
              <TextBlock Classes="caption" Text="Smaller text used for supplementary information and captions" />
              <TextBlock
                Margin="0,10,0,0"
                FontFamily="Consolas"
                FontSize="12"
                Text="Font size: 10px" />
            </StackPanel>
          </Border>

          <!--  Secondary Text  -->
          <Border
            Grid.Row="2"
            Grid.Column="1"
            Padding="15"
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource DividerBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
              <TextBlock FontWeight="SemiBold" Text="Secondary Text" />
              <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Text="Less prominent text with secondary color" />
              <TextBlock
                Margin="0,10,0,0"
                FontFamily="Consolas"
                FontSize="12"
                Text="Color: TextSecondaryBrush" />
            </StackPanel>
          </Border>
        </Grid>

      </StackPanel>
    </StackPanel>
  </Design.PreviewWith>

  <Style Selector="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightDefault}" />
    <Setter Property="TextWrapping" Value="Wrap" />
  </Style>

  <Style Selector="TextBlock.h1">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeH1}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightH1}" />
  </Style>

  <Style Selector="TextBlock.h2">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeH2}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightH2}" />
  </Style>

  <Style Selector="TextBlock.h3">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeH3}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightH3}" />
  </Style>

  <Style Selector="TextBlock.h4">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeH4}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightH4}" />
  </Style>

  <Style Selector="TextBlock.h5">
    <Setter Property="FontFamily" Value="{StaticResource MontserratFontFamily}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeH5}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightH5}" />
  </Style>

  <Style Selector="TextBlock.h6">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeH6}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightH6}" />
  </Style>

  <Style Selector="TextBlock.body">
    <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    <Setter Property="FontWeight" Value="{StaticResource FontWeightRegular}" />
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightDefault}" />
  </Style>

  <Style Selector="TextBlock.text-dark">
    <Setter Property="Foreground" Value="{DynamicResource TextColorDark}" />
  </Style>

  <Style Selector="TextBlock.text-light">
    <Setter Property="Foreground" Value="{DynamicResource TextColorLight}" />
  </Style>

  <Style Selector="TextBlock.text-secondary">
    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
  </Style>

  <Style Selector="TextBlock.text-muted">
    <Setter Property="Foreground" Value="{DynamicResource TextColorMuted}" />
  </Style>

  <Style Selector="TextBlock.text-disabled">
    <Setter Property="Foreground" Value="{DynamicResource TextColorDisabled}" />
  </Style>

  <Style Selector="TextBlock.small">
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightSmall}" />
  </Style>

  <Style Selector="TextBlock.caption">
    <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}" />
    <Setter Property="LineHeight" Value="{StaticResource LineHeightCaption}" />
  </Style>

  <Style Selector="TextBlock.tight">
    <Setter Property="LineHeight" Value="{StaticResource LineHeightTight}" />
  </Style>

  <Style Selector="TextBlock.comfortable">
    <Setter Property="LineHeight" Value="{StaticResource LineHeightComfortable}" />
  </Style>

  <Style Selector="TextBlock.loose">
    <Setter Property="LineHeight" Value="{StaticResource LineHeightLoose}" />
  </Style>

  <Style Selector="TextBlock.thin">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightThin}" />
  </Style>

  <Style Selector="TextBlock.light">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightLight}" />
  </Style>

  <Style Selector="TextBlock.medium">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
  </Style>

  <Style Selector="TextBlock.semibold">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}" />
  </Style>

  <Style Selector="TextBlock.bold">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
  </Style>

  <Style Selector="TextBlock.extrabold">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightExtraBold}" />
  </Style>

  <Style Selector="TextBlock.black">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBlack}" />
  </Style>

  <Style Selector="TextBlock.bolditalic">
    <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}" />
    <Setter Property="FontStyle" Value="Italic" />
  </Style>

  <Style Selector="TextBlock.letter-spacing-normal">
    <Setter Property="LetterSpacing" Value="{StaticResource LetterSpacingNormal}" />
  </Style>

  <Style Selector="TextBlock.letter-spacing-wide">
    <Setter Property="LetterSpacing" Value="{StaticResource LetterSpacingWide}" />
  </Style>

  <Style Selector="TextBlock.letter-spacing-tight">
    <Setter Property="LetterSpacing" Value="{StaticResource LetterSpacingTight}" />
  </Style>
</Styles>