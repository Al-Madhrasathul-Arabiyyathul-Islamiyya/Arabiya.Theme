<Window
  x:Class="Arabiyya.Theme.Demo.Views.MainWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:avaglass="using:AvaGlass.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:theme="using:Arabiyya.Theme"
  xmlns:vm="using:Arabiyya.Theme.Demo.ViewModels"
  Title="Arabiyya Theme Demo"
  Width="1366"
  Height="768"
  d:DesignHeight="768"
  d:DesignWidth="1366"
  x:DataType="vm:MainViewModel"
  Background="{DynamicResource ThemeBackgroundGradient}"
  CornerRadius="16"
  ExtendClientAreaToDecorationsHint="True"
  Icon="/Assets/logo.ico"
  TransparencyLevelHint="AcrylicBlur"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid ColumnDefinitions="10,220,*,10" RowDefinitions="10,*,10">

    <!--  Sidebar Navigation  -->
    <Border
      Grid.Row="1"
      Grid.Column="1"
      BorderThickness="8">
      <avaglass:GlassmorphicPanel Classes="GlassPanel">
        <Grid RowDefinitions="Auto,*,Auto">
          <StackPanel Grid.Row="0" Margin="10,20">
            <TextBlock
              Margin="0,0,0,20"
              Classes="h3"
              Text="Theme Demo" />

            <ListBox x:Name="NavigationList" SelectedIndex="{Binding SelectedNavIndex}">
              <ListBoxItem Content="Color Palette" />
              <ListBoxItem Content="Typography" />
              <ListBoxItem Content="Buttons" />
              <ListBoxItem Content="Glass Panels" />
              <ListBoxItem Content="Text Inputs" />
              <ListBoxItem Content="Other Inputs" />
              <ListBoxItem Content="Gradients" />
            </ListBox>
          </StackPanel>

          <!--  Theme toggle at bottom  -->
          <StackPanel Grid.Row="2" Margin="10">
            <Border
              Margin="0,0,0,20"
              Padding="10"
              Background="#20000000"
              CornerRadius="6">
              <StackPanel Spacing="10">
                <!--  Default toggle switch  -->
                <theme:ThemeSwitcher VariantType="Toggle" />

                <!--  Icon toggle switch  -->
                <theme:ThemeSwitcher VariantType="IconToggle" />

                <!--  ComboBox style  -->
                <theme:ThemeSwitcher VariantType="ComboBox" />

                <!--  Icon button style  -->
                <theme:ThemeSwitcher VariantType="IconButton" />
              </StackPanel>
            </Border>
          </StackPanel>
        </Grid>
      </avaglass:GlassmorphicPanel>
    </Border>

    <!--  Content Area  -->
    <ScrollViewer Grid.Row="1" Grid.Column="2">
      <ContentControl Margin="20,25,20,20" Content="{Binding CurrentView}" />
    </ScrollViewer>
  </Grid>

</Window>